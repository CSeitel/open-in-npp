{
  "name": "open-in-npp",
  "displayName": "Open in Notepad++",
  "description": "Open the active file in Notepad++",
  "version": "0.1.0",
  "publisher": "CSeitel",
  "repository": {
    "type": "git"
  , "url": "https://github.com/CSeitel/open-in-npp"
  },
  "bugs": {
    "url": "https://github.com/CSeitel/open-in-npp/issues"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "license": "MIT",
  "icon": "images/icons8-notepad++-144.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:openInNpp.openSettings"
  , "onCommand:extension.openInNpp"
  , "onCommand:extension.openInNppX"
  ]
, "main": "./out/extension.js"
, "contributes":
  { "commands":
    [ { "command": "openInNpp.openSettings"
      , "title": "Open Settings Notepad++"
      }
    , { "command": "extension.openInNpp"
      , "title": "Open Active File in Notepad++"
      }
    , { "command": "extension.openInNppX"
      , "title": "Open in Notepad++"
      }
    ]
  , "keybindings": [
      { "command": "extension.openInNpp"
      , "key": "ctrl+k ctrl+n"
      }
    ]

  , "menus":
    { "commandPalette":
      [ { "command": "extension.openInNppX"
        , "when": "false"
        }
      ]
    , "editor/context":
      [ { "command": "extension.openInNppX"
        , "when": "config.openInNpp.extendEditorContextMenu"
        , "group": "openInNpp@1"
        }
      ]
    , "explorer/context":
      [ { "command": "extension.openInNppX"
        , "when": "config.openInNpp.extendExplorerContextMenu"
        }
      ]
    }

  , "configuration": {
      "title": "Open in Notepad++"
    , "properties": {
        "openInNpp.Executable":
        { "type"   : "string"
        , "default": ""
        , "markdownDescription": "Specifies the path of the _Notepad++_ executable ([?](https://github.com/CSeitel/open-in-npp#extension-settings))"
        }
      , "openInNpp.multiInst":
        { "type"   : "boolean"
        , "default": false
        , "markdownDescription": "Open a separate instance of _Notepad++_ for each command execution"
        }
      , "openInNpp.preserveCursorPosition":
        { "type"   : "boolean"
        , "default": true
        , "markdownDescription": "Let _Notepad++_ preserve the cursor position of the _VS Code_ editor"
        }
      , "openInNpp.commandLineArguments":
        { "type"   : "array"
        , "markdownDescription": "Let _Notepad++_ [?](https://npp-user-manual.org/docs/command-prompt/)"
        }
      , "openInNpp.extendExplorerContextMenu":
        { "type"   : "boolean"
        , "default": true
        , "markdownDescription": "Add _Open in Notepad++_ to the context menu of the _VS Code_ explorer"
        }
      , "openInNpp.extendEditorContextMenu": {
          "type"   : "boolean"
        , "default": true
        , "markdownDescription": "Add _Open in Notepad++_ to the context menu of the _VS Code_ editor"
        }
        
      }
    }

  }
  , "scripts": {
    "vscode:prepublish": "npm run compile"
  , "compile": "tsc -p ./"
  , "watch": "tsc -watch -p ./"
  , "pretest": "npm run compile"
  , "test": "node ./out/test/runTest.js"
  , "mocha": "mocha ./out/test/mocha/**/*.spec.js"
  , "vscode:package": "vsce package"
  , "vscode:install": "code --install-extension any-tree-0.0.1.vsix"

  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.2.0"
  }
}
